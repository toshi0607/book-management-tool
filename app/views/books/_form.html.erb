<%= form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "タイトル", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "書籍情報", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "ISBN", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :isbn, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "登録", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("キャンセル")),
                books_path, :class => 'btn' %>
  </div>
<% end %>
